{
    "name": "npm-package-boilerplate",
    "version": "1.0.0",
    "description": "Boilerplate NPM package.",
    "source": "src/index.js",
    "main": "dist/index.js",
    "targets": {
        "main": {
            "optimize": true
        }
    },
    "scripts": {
        "build": "parcel build",
        "dev": "parcel .",
        "lint": "eslint .",
        "prepare": "husky install",
        "prepublishOnly": "npm run build",
        "test": "jest --coverage=true ./test/unit --verbose --runInBand"
    },
    "files": [
        "dist/*"
    ],
    "author": "Luke Stanbery",
    "license": "MIT",
    "devDependencies": {
        "@jest/types": "^29.4.1",
        "eslint": "^8.34.0",
        "husky": "^8.0.3",
        "jest": "^29.3.1",
        "node-notifier": "^10.0.1",
        "parcel": "^2.8.3"
    }
}
